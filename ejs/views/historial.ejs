<%- include('./partials/index.ejs') %>
<h2 style="color:crimson;">Vista de Productos</h2>
<% const hayproductos = productos.length %>
<% if(hayproductos > 0 ){ %>
    <div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Link URL</th>
        </tr>
        <% for(const producto of productos) {%>
            <tr>
            <td>
                <%=producto.nombre%>
            </td>
            <td>
                <%=producto.precio%>
            </td>
            <td>
                <img src=<%=producto.url%> width="60" height="60">
            </td>
            
        </tr>
        <%};%>
        
    </table>
</div>
   
<% } else{ %>
    <h3 class="alert alert-danger">no se encontraron datos</h1>
