extends layout

block contenido

    -const estilo = "width:25%;height:20px"

    h2(style="color:crimson;")="Vista de Productos"

    -const hayproductos = productos.length

    if hayproductos > 0
        div(class="table-responsive")
        table(class="table table-dark")
            tr(style="color: yellow;")
                th="Nombre"
                th="Precio"
                th="Link URL"
            each producto in productos
                tr
                td=producto.nombre
                td=producto.precio
                td
                    img(src=producto.url width="60" height="60")
    else            
        h3(class="alert alert-danger")="no se encontraron datos"
        

    button(onclick="location.href = '/'" class="btn btn-success mt-3 mb-5")="Home"
